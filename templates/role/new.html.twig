{% extends 'base.html.twig' %}

{% block title %}Création d'un rôle{% endblock %}

{% block body %}
<h5><b>Saisie d'un nouveau rôle</b></h5>

{{ form_start(form, {'method': 'POST'}, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_label(form.libelle, null, {'label_attr': {'class': 'my-form-label'}}) }}
    {{ form_widget(form.libelle, {'attr': {'class': 'form-control my-form-input-big'}}) }}

	<br><br>
    {{ form_widget(form.save, { 'label': 'Valider', 'attr': {'class': 'btn btn-red submit-button'}}) }}	

    <br><br>
    <a href="{{ path('listRoles') }}">Annuler</a>


{{ form_end(form) }}

{% endblock %}